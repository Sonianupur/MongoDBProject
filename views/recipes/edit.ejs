<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Edit Recipe</title>
    <link rel="stylesheet" href="/css/header.css" />
    <link rel="stylesheet" href="/css/form.css" />
    <link rel="stylesheet" href="/css/global.css" />
  </head>
  <body>
    <%- include('../header') %>
    <h1 class="form-heading">Edit Recipe</h1>
    <form action="/recipes/<%= recipe._id %>/edit?_method=PUT" method="POST">
      <label for="title">Recipe Title</label>
      <input
        type="text"
        id="title"
        name="Title"
        value="<%= recipe.Title %>"
        required
      />
      <label for="ingredients">Ingredients (comma separated)</label>
      <input
        type="text"
        id="ingredients"
        name="Ingredients"
        value="<%= recipe.Ingredients.join(', ') %>"
        required
      />
      <label for="instructions">Instructions</label>
      <textarea id="instructions" name="Instructions" required>
<%= recipe.Instructions %></textarea
      >
      <label for="image_name">Image URL</label>
      <input
        type="text"
        id="image_name"
        name="Image_Name"
        value="<%= recipe.Image_Name %>"
        required
      />
      <label for="cleaned_ingredients"
        >Cleaned Ingredients (comma separated)</label
      >
      <input
        type="text"
        id="cleaned_ingredients"
        name="Cleaned_Ingredients"
        value="<%= recipe.Cleaned_Ingredients.join(', ') %>"
        required
      />
      <button type="submit">Update Recipe</button>
    </form>

    <script>
      const auth_user = sessionStorage.getItem("user");
      if (!auth_user) {
        window.location.href = "/login";
      }
    </script>
  </body>
</html>
